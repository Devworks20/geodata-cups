<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ChangePasswordActivity"

    >

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF"
        android:elevation="10dp"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="UselessParent"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                >
                <ProgressBar
                    style="?android:attr/progressBarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:progressTint="#2888ac"
                    android:theme="@style/AppTheme.WhiteAccent"
                    />
                <TextView
                    android:text="Loading..."
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    tools:ignore="HardcodedText"
                    />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        >
        <ImageView
            android:id="@+id/iv_back"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_arrow_back_white_24dp"
            android:layout_width="34dp"
            android:layout_height="55dp"
            app:tint="@color/mainColor"
            />
        <TextView
            android:layout_marginStart="20dp"
            android:text="Change Password"
            android:textSize="20sp"
            android:gravity="start|center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            tools:ignore="HardcodedText"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/mainGray"
        android:visibility="visible"
        />

    <TextView
        android:id="@+id/tv_display"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="Hi there! it looks like it's your first time logging in to the CUPS mobile application.\n\nIn order to protect your account, you must change your password from its default."
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText"
        />

    <LinearLayout
        android:id="@+id/ll_current_password"
        android:visibility="gone"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="@string/current_password"
            android:textColor="@color/black"
            android:textStyle="bold"
            tools:ignore="HardcodedText"
            />
        <EditText
            android:id="@+id/edt_current_password"
            android:layout_marginTop="5dp"
            android:inputType="textPassword"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:drawablePadding="10dp"
            android:hint="Current Password"
            android:autofillHints="Enter Email Address"
            android:background="@drawable/custom_background_white_gray_remarks"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            tools:ignore="HardcodedText"
            android:imeOptions="actionNext"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="@string/new_password"
            android:textColor="@color/black"
            android:textStyle="bold"
            tools:ignore="HardcodedText"
            />
        <EditText
            android:id="@+id/edt_new_password"
            android:layout_marginTop="5dp"
            android:inputType="textPassword"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:drawablePadding="10dp"
            android:hint="New Password"
            android:autofillHints="Enter Email Address"
            android:background="@drawable/custom_background_white_gray_remarks"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            tools:ignore="HardcodedText"
            android:imeOptions="actionNext"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="@string/re_enter_new_password"
            android:textColor="@color/black"
            android:textStyle="bold"
            tools:ignore="HardcodedText"
            />
        <EditText
            android:id="@+id/edt_re_new_password"
            android:layout_marginTop="5dp"
            android:inputType="textPassword"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:drawablePadding="10dp"
            android:hint="Re-enter Your New Password"
            android:autofillHints="Enter Email Address"
            android:background="@drawable/custom_background_white_gray_remarks"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            tools:ignore="HardcodedText"
            android:imeOptions="actionDone"
            />
    </LinearLayout>

    <Button
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:id="@+id/btn_reset_password"
        android:background="@drawable/custom_background_login_button"
        android:text="Change Password"
        android:textSize="22sp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText"
        />

</LinearLayout>