<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Backend.Activity.NewProgramsActivity"
    >

    <LinearLayout
        android:gravity="center_vertical"
        android:background="@color/mainColor"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        >
        <ImageView
            android:id="@+id/iv_back"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_arrow_back_white_24dp"
            android:layout_width="34dp"
            android:layout_height="55dp"
            />
        <TextView
            android:layout_marginStart="20dp"
            android:text="New Programs"
            android:textSize="20sp"
            android:gravity="start|center"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            tools:ignore="HardcodedText"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Program"
                android:textColor="@color/black"
                android:textStyle="bold"
                tools:ignore="HardcodedText"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="*"
                android:textColor="@android:color/holo_red_dark"
                android:textStyle="bold"
                tools:ignore="HardcodedText"
                />
        </LinearLayout>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edt_program"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:maxLines="1"
            android:hint="Program"
            app:met_baseColor="@android:color/black"
            app:met_bottomTextSize="0dp"
            app:met_primaryColor="@color/colorPrimary"
            app:met_singleLineEllipsis="true"
            app:met_textColor="@android:color/black"
            app:met_textColorHint="@android:color/darker_gray"
            tools:ignore="HardcodedText"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Activity"
                android:textColor="@color/black"
                android:textStyle="bold"
                tools:ignore="HardcodedText"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="*"
                android:textColor="@android:color/holo_red_dark"
                android:textStyle="bold"
                tools:ignore="HardcodedText"
                />
        </LinearLayout>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edt_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:maxLines="1"
            android:hint="Activity"
            app:met_baseColor="@android:color/black"
            app:met_bottomTextSize="0dp"
            app:met_primaryColor="@color/colorPrimary"
            app:met_singleLineEllipsis="true"
            app:met_textColor="@android:color/black"
            app:met_textColorHint="@android:color/darker_gray"
            tools:ignore="HardcodedText"
            />


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Output"
                android:textColor="@color/black"
                android:textStyle="bold"
                tools:ignore="HardcodedText"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="*"
                android:textColor="@android:color/holo_red_dark"
                android:textStyle="bold"
                tools:ignore="HardcodedText"
                />
        </LinearLayout>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edt_output"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:maxLines="1"
            android:hint="Output"
            app:met_baseColor="@android:color/black"
            app:met_bottomTextSize="0dp"
            app:met_primaryColor="@color/colorPrimary"
            app:met_singleLineEllipsis="true"
            app:met_textColor="@android:color/black"
            app:met_textColorHint="@android:color/darker_gray"
            tools:ignore="HardcodedText"
            />

        <Button
            android:id="@+id/btn_submit_programs"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/custom_background_submit_button"
            android:text="SUBMIT"
            android:textSize="22sp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText"
            />

    </LinearLayout>



</LinearLayout>