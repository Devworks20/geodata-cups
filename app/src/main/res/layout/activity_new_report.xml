<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/background_dark_color"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.NewReportActivity"
    >

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF"
        android:elevation="10dp"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="UselessParent"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                >
                <ProgressBar
                    style="?android:attr/progressBarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:progressTint="#2888ac"
                    android:theme="@style/AppTheme.WhiteAccent"
                    />
                <TextView
                    android:text="Uploading..."
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    tools:ignore="HardcodedText"
                    />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_custom_toolbar"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        >
        <ImageView
            android:id="@+id/iv_back"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_arrow_back_white_24dp"
            android:layout_width="34dp"
            android:layout_height="55dp"
            tools:ignore="ContentDescription"
            app:tint="@color/mainColor"
            />
        <TextView
            android:layout_marginStart="20dp"
            android:text="New Report"
            android:textSize="20sp"
            android:gravity="start|center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            tools:ignore="HardcodedText"
            />

        <LinearLayout
            android:layout_marginEnd="10dp"
            android:gravity="end"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:id="@+id/ll_calendar_history"
                android:padding="10dp"
                android:layout_gravity="end"
                android:gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/custom_background_calendar_button"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                tools:ignore="UselessParent"
                >
                <ImageView
                    android:src="@drawable/asset_calendar"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    tools:ignore="ContentDescription"
                    />
                <TextView
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:id="@+id/tv_dateReporting"
                    android:text="May 07, 2021"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="HardcodedText"
                    />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/view_id_1"
        android:background="@color/mainGray"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        />

    <LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UselessParent"
            >

            <EditText
                android:id="@+id/edt_report_search"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/custom_background_white_gray_remarks"
                android:drawableStart="@drawable/asset_search_gray"
                android:drawablePadding="10dp"
                android:hint="Search"
                android:imeOptions="actionDone"
                android:maxLines="1"
                android:paddingStart="10dp"
                android:paddingEnd="35dp"
                android:textSize="14sp"
                tools:ignore="Autofill,HardcodedText,TextFields" />
            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_clear_search"
                android:background="@drawable/asset_close"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="ContentDescription"
                />
        </RelativeLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:ignore="UselessParent"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="UselessParent"
                    >

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_reports"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:descendantFocusability="beforeDescendants"
                        android:nestedScrollingEnabled="false"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp" />
                </RelativeLayout>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:background="@color/mainGray"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:weightSum="10"
        tools:ignore="DisableBaselineAlignment"
        >
        <LinearLayout
            android:layout_marginEnd="1dp"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            >
            <Button
                android:id="@+id/btn_save_draft"
                android:text="SAVE AS DRAFT"
                android:textStyle="bold"
                android:textColor="@color/mainColor"
                android:background="@drawable/custom_button_white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="HardcodedText"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginStart="1dp"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            >
            <Button
                android:id="@+id/btn_preview_new_cups"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/custom_button_white"
                android:text="PREVIEW"
                android:textColor="@color/mainColor"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>