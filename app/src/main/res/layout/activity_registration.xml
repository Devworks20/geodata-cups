<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.RegistrationActivity"
    >

    <LinearLayout
        android:id="@+id/ll_custom_toolbar"
        android:gravity="center_vertical"
        android:background="@color/mainColor"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        >
        <ImageView
            android:id="@+id/iv_back"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_arrow_back_white_24dp"
            android:layout_width="34dp"
            android:layout_height="55dp"
            />
        <TextView
            android:layout_marginStart="20dp"
            android:text="CUPS Registration"
            android:textSize="20sp"
            android:gravity="start|center"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            tools:ignore="HardcodedText"
            />
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF"
        android:elevation="10dp"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="UselessParent"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                >
                <ProgressBar
                    style="?android:attr/progressBarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:progressTint="#2888ac"
                    android:theme="@style/AppTheme.WhiteAccent"
                    />
                <TextView
                    android:text="Loading..."
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    tools:ignore="HardcodedText"
                    />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_process_bar"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="9"
        android:layout_below="@+id/ll_custom_toolbar"
        >
        <View
            android:id="@+id/view_progress1"
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:layout_weight="3"
            android:background="@color/ProgressColor"
            />
        <View
            android:id="@+id/view_progress2"
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:layout_weight="3"
            android:background="@color/mainGray"
            />
        <View
            android:id="@+id/view_progress3"
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:layout_weight="3"
            android:background="@color/mainGray"
            />
    </LinearLayout>


    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rl_buttons"
        android:layout_below="@+id/ll_process_bar"
        android:layout_alignParentBottom="true"
        />

    <RelativeLayout
        android:id="@+id/rl_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:weightSum="10"
        >
        <LinearLayout
            android:id="@+id/ll_prev"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_margin="5dp"
                android:id="@+id/fab_previousPage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tint="#FFF"
                app:backgroundTint="@color/my_gray"
                app:fabSize="normal"
                app:srcCompat="@drawable/ic_arrow_back_black_24dp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal"
            >
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_margin="5dp"
                android:id="@+id/fab_nextPage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tint="#FFF"
                app:backgroundTint="@color/mainColor"
                app:fabSize="normal"
                app:srcCompat="@drawable/ic_arrow_forward_black_24dp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_done"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal"
            >
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_margin="5dp"
                android:id="@+id/fab_done"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tint="#FFF"
                app:backgroundTint="@color/ProgressColor"
                app:fabSize="normal"
                app:srcCompat="@drawable/ic_arrow_forward_black_24dp"
                />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>