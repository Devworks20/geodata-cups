<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@drawable/custom_background_success"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_margin="5dp"
            android:background="@color/light_green"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/registration_image"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:padding="10dp"
                android:src="@drawable/ic_check_light_green_24dp"
                app:civ_border_color="@color/white"
                app:civ_circle_background_color="@color/white"
                app:civ_border_width="2dp"
                />
        </LinearLayout>

        <LinearLayout
            android:background="@drawable/custom_background_success_white"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_marginTop="10dp"
                android:text="SUCCESS"
                android:textAlignment="center"
                android:textSize="20sp"
                android:gravity="start|center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="HardcodedText"
                />

            <TextView
                android:id="@+id/tv_status"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:text="Message here..."
                android:textAlignment="center"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="HardcodedText"
                />

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <Button
                    android:id="@+id/btn_okay"
                    android:background="@drawable/custom_background_login_button"
                    android:text="OKAY"
                    android:textSize="20sp"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="HardcodedText"
                    />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>






